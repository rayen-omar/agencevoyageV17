<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire Destination -->
    <record id="view_destination_form" model="ir.ui.view">
        <field name="name">agencevoyage.destination.form</field>
        <field name="model">agencevoyage.destination</field>
        <field name="arch" type="xml">
            <form string="Destination">
                <style>
                    /* Style simple pour les champs */
                    .o_form_view .o_field_widget input,
                    .o_form_view .o_field_widget textarea,
                    .o_form_view .o_field_widget select {
                        border: 2px solid #71639E !important;
                        border-radius: 4px;
                        padding: 8px 12px;
                        transition: all 0.3s ease;
                    }
                    
                    .o_form_view .o_field_widget input:hover,
                    .o_form_view .o_field_widget textarea:hover,
                    .o_form_view .o_field_widget select:hover {
                        border-color: #8B7BB8 !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.1);
                    }
                    
                    .o_form_view .o_field_widget input:focus,
                    .o_form_view .o_field_widget textarea:focus,
                    .o_form_view .o_field_widget select:focus {
                        border-color: #71639E !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.2);
                        outline: none;
                    }
                </style>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nom_lieu" placeholder="Nom du lieu"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <!-- Informations générales -->
                            <field name="type_destination" required="1"/>
                            <field name="ville" required="1"/>
                            <field name="pays" required="1"/>
                            <field name="adresse" required="1" widget="text"/>
                        </group>
                        <group>
                            <!-- Photo -->
                            <field name="photo" widget="image" class="oe_avatar" options="{'preview_image': 'photo', 'size': [150, 150]}"/>
                            <field name="photo_filename" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Liste (Tree) Destination -->
    <record id="view_destination_tree" model="ir.ui.view">
        <field name="name">agencevoyage.destination.tree</field>
        <field name="model">agencevoyage.destination</field>
        <field name="arch" type="xml">
            <tree string="Destinations">
                <field name="photo" widget="image" class="o_avatar"/>
                <field name="nom_lieu"/>
                <field name="type_destination"/>
                <field name="ville"/>
                <field name="pays"/>
            </tree>
        </field>
    </record>

    <!-- Vue Recherche Destination -->
    <record id="view_destination_search" model="ir.ui.view">
        <field name="name">agencevoyage.destination.search</field>
        <field name="model">agencevoyage.destination</field>
        <field name="arch" type="xml">
            <search string="Rechercher une Destination">
                <field name="nom_lieu"/>
                <field name="ville"/>
                <field name="pays"/>
                <field name="type_destination"/>
                
                <filter string="Culturel" name="culturel" domain="[('type_destination', '=', 'culturel')]"/>
                <filter string="Religieux" name="religieux" domain="[('type_destination', '=', 'religieux')]"/>
                <filter string="Touristique" name="touristique" domain="[('type_destination', '=', 'touristique')]"/>
            </search>
        </field>
    </record>

    <!-- Action pour ouvrir la liste des destinations -->
    <record id="action_destination" model="ir.actions.act_window">
        <field name="name">Destinations</field>
        <field name="res_model">agencevoyage.destination</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_destination_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première destination
            </p>
            <p>
                Gérez les destinations touristiques : lieux culturels, religieux et touristiques.
            </p>
        </field>
    </record>
</odoo>
