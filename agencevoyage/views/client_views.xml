<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire Client -->
    <record id="view_client_form" model="ir.ui.view">
        <field name="name">agencevoyage.client.form</field>
        <field name="model">agencevoyage.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <style>
                    /* Style simple pour les champs */
                    .o_form_view .o_field_widget input,
                    .o_form_view .o_field_widget textarea,
                    .o_form_view .o_field_widget select {
                        border: 2px solid #71639E !important;
                        border-radius: 4px;
                        padding: 8px 12px;
                        transition: all 0.3s ease;
                    }
                    
                    .o_form_view .o_field_widget input:hover,
                    .o_form_view .o_field_widget textarea:hover,
                    .o_form_view .o_field_widget select:hover {
                        border-color: #8B7BB8 !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.1);
                    }
                    
                    .o_form_view .o_field_widget input:focus,
                    .o_form_view .o_field_widget textarea:focus,
                    .o_form_view .o_field_widget select:focus {
                        border-color: #71639E !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.2);
                        outline: none;
                    }
                </style>
                <sheet>
                    <!-- En-tête avec photo -->
                    <field name="photo" widget="image" class="oe_avatar" options="{'size': [150, 150]}"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="nom_complet" readonly="1" class="oe_inline"/>
                        </h1>
                    </div>

                    <group>
                        <!-- Informations Personnelles -->
                        <group string="Informations Personnelles">
                            <field name="prenom" placeholder="Ex: Mohamed"/>
                            <field name="nom" placeholder="Ex: Ben Ali"/>
                            <field name="sexe" widget="radio" options="{'horizontal': true}"/>
                            <field name="nationalite" placeholder="Ex: Tunisienne"/>
                        </group>

                        <!-- Coordonnées -->
                        <group string="Coordonnées">
                            <field name="email" placeholder="exemple@email.com" widget="email"/>
                            <field name="telephone" placeholder="+216 XX XXX XXX" widget="phone"/>
                            <field name="adresse" placeholder="Adresse complète du client"/>
                        </group>
                    </group>
                    
                    <group>
                        <!-- Documents d'identité -->
                        <group string="Documents d'Identité">
                            <field name="numero_cin" placeholder="Numéro de CIN"/>
                            <field name="numero_passport" placeholder="Numéro de passeport"/>
                        </group>
                        
                        <!-- Informations bancaires -->
                        <group string="Informations Bancaires">
                            <field name="numero_bancaire" placeholder="Numéro de compte bancaire"/>
                        </group>
                    </group>

                    <!-- Champ caché pour le nom du fichier photo -->
                    <field name="photo_filename" invisible="1"/>
                </sheet>

                <!-- Chatter pour le suivi des modifications -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste (Tree) Client -->
    <record id="view_client_tree" model="ir.ui.view">
        <field name="name">agencevoyage.client.tree</field>
        <field name="model">agencevoyage.client</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="nom_complet" string="Nom Complet"/>
                <field name="sexe"/>
                <field name="nationalite"/>
                <field name="telephone" widget="phone"/>
                <field name="email" widget="email"/>
            </tree>
        </field>
    </record>

    <!-- Vue Recherche Client -->
    <record id="view_client_search" model="ir.ui.view">
        <field name="name">agencevoyage.client.search</field>
        <field name="model">agencevoyage.client</field>
        <field name="arch" type="xml">
            <search string="Rechercher un Client">
                <field name="nom_complet" string="Nom" filter_domain="['|', ('nom', 'ilike', self), ('prenom', 'ilike', self)]"/>
                <field name="telephone"/>
                <field name="email"/>
                <field name="nationalite"/>
                <field name="numero_cin"/>
                <field name="numero_passport"/>
                <field name="numero_bancaire"/>
                
                <filter string="Masculin" name="masculin" domain="[('sexe', '=', 'masculin')]"/>
                <filter string="Féminin" name="feminin" domain="[('sexe', '=', 'feminin')]"/>
                
                <group expand="0" string="Grouper par">
                    <filter string="Sexe" name="group_sexe" context="{'group_by': 'sexe'}"/>
                    <filter string="Nationalité" name="group_nationalite" context="{'group_by': 'nationalite'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Kanban Client -->
    <record id="view_client_kanban" model="ir.ui.view">
        <field name="name">agencevoyage.client.kanban</field>
        <field name="model">agencevoyage.client</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="nom_complet"/>
                <field name="photo"/>
                <field name="telephone"/>
                <field name="email"/>
                <field name="nationalite"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('agencevoyage.client', 'photo', record.id.raw_value)" alt="Photo" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="nom_complet"/>
                                </strong>
                                <ul>
                                    <li><i class="fa fa-globe"/> <field name="nationalite"/></li>
                                    <li t-if="record.telephone.raw_value"><i class="fa fa-phone"/> <field name="telephone"/></li>
                                    <li t-if="record.email.raw_value"><i class="fa fa-envelope"/> <field name="email"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour ouvrir la liste des clients -->
    <record id="action_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">agencevoyage.client</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier client
            </p>
            <p>
                Cliquez sur le bouton "Nouveau" pour ajouter un nouveau client à votre agence de voyage.
            </p>
        </field>
    </record>
</odoo>
