<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire Achat -->
    <record id="view_achat_form" model="ir.ui.view">
        <field name="name">agencevoyage.achat.form</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <form string="Achat">
                <style>
                    .o_form_view .o_field_widget input,
                    .o_form_view .o_field_widget textarea,
                    .o_form_view .o_field_widget select {
                        border: 2px solid #71639E !important;
                        border-radius: 4px;
                        padding: 8px 12px;
                        transition: all 0.3s ease;
                    }
                    
                    .o_form_view .o_field_widget input:hover,
                    .o_form_view .o_field_widget textarea:hover,
                    .o_form_view .o_field_widget select:hover {
                        border-color: #8B7BB8 !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.1);
                    }
                    
                    .o_form_view .o_field_widget input:focus,
                    .o_form_view .o_field_widget textarea:focus,
                    .o_form_view .o_field_widget select:focus {
                        border-color: #71639E !important;
                        box-shadow: 0 0 0 3px rgba(113, 99, 158, 0.2);
                        outline: none;
                    }
                </style>
                <header>
                    <button name="action_valider_devis" string="Valider en Commande" 
                            type="object" 
                            class="oe_highlight"
                            invisible="statut != 'devis'"
                            confirm="Êtes-vous sûr de vouloir valider ce devis en commande ?"/>
                    <button name="action_valider_paye" string="Marquer comme Payé" 
                            type="object" 
                            class="oe_highlight"
                            invisible="statut != 'commande'"
                            confirm="Êtes-vous sûr de vouloir marquer cette commande comme payée ?"/>
                    <button name="action_annuler" string="Annuler" 
                            type="object" 
                            invisible="statut == 'annule' or statut == 'paye'"
                            confirm="Êtes-vous sûr de vouloir annuler cet achat ?"/>
                    <button name="action_generer_bon_commande" string="Générer Bon de Commande" 
                            type="object" 
                            invisible="statut not in ['devis', 'commande']"/>
                    <field name="statut" widget="statusbar" statusbar_visible="devis,commande,paye"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="ID Achat"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="date_achat" required="1"/>
                            <field name="voyage_id" required="1"/>
                            <field name="statut" required="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Informations Fournisseur">
                            <group>
                                <group string="Sélection du Fournisseur">
                                    <field name="fournisseur_id" 
                                           options="{'no_create': False, 'no_create_edit': False}"
                                           context="{'default_nom': nom_fournisseur, 'default_type_fournisseur': type_fournisseur, 'default_contact': contact, 'default_telephone': telephone, 'default_email': email}"/>
                                    <div colspan="2">
                                        <p class="text-muted">
                                            <i class="fa fa-info-circle"/> 
                                            Sélectionnez un fournisseur existant ou créez-en un nouveau. Les champs ci-dessous seront remplis automatiquement.
                                        </p>
                                    </div>
                                </group>
                                
                                <group string="Informations Fournisseur">
                                    <field name="nom_fournisseur"/>
                                    <field name="type_fournisseur"/>
                                    <field name="contact"/>
                                    <field name="telephone" widget="phone"/>
                                    <field name="email" widget="email"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Lignes d'achat">
                            <field name="ligne_achat_ids" nolabel="1">
                                <tree string="Lignes d'achat" create="1" delete="1">
                                    <field name="service"/>
                                    <field name="description"/>
                                    <field name="quantite"/>
                                    <field name="prix"/>
                                    <field name="total" readonly="1" sum="Total"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="service"/>
                                            <field name="description" widget="text"/>
                                            <field name="quantite"/>
                                            <field name="prix"/>
                                            <field name="total" readonly="1"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            
                            <group class="oe_subtotal_footer oe_right">
                                <group string="Montant">
                                    <field name="montant_ht" readonly="1"/>
                                    <field name="pourcentage_tva"/>
                                    <field name="montant_tva" readonly="1"/>
                                    <field name="montant_ttc" readonly="1"/>
                                </group>
                                <group string="Suivi Paiements">
                                    <field name="montant_paye" readonly="1"/>
                                    <field name="reste_a_payer" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Paiements Fournisseur -->
                        <page string="Paiements">
                            <field name="paiement_ids" nolabel="1">
                                <tree string="Paiements" create="1" delete="1">
                                    <field name="name"/>
                                    <field name="date_paiement"/>
                                    <field name="montant" sum="Total"/>
                                    <field name="mode_paiement"/>
                                    <field name="statut"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="date_paiement"/>
                                            <field name="montant"/>
                                            <field name="mode_paiement"/>
                                            <field name="reference_bancaire"/>
                                            <field name="statut"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste Achat -->
    <record id="view_achat_tree" model="ir.ui.view">
        <field name="name">agencevoyage.achat.tree</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <tree string="Achats" 
                  decoration-info="statut == 'devis'" 
                  decoration-warning="statut == 'commande'" 
                  decoration-success="statut == 'paye'" 
                  decoration-muted="statut == 'annule'"
                  default_order="date_achat desc">
                <field name="name"/>
                <field name="date_achat"/>
                <field name="voyage_id"/>
                <field name="statut" widget="badge" 
                       decoration-info="statut == 'devis'" 
                       decoration-warning="statut == 'commande'" 
                       decoration-success="statut == 'paye'" 
                       decoration-danger="statut == 'annule'"/>
                <field name="fournisseur_id"/>
                <field name="nom_fournisseur"/>
                <field name="montant_ttc" sum="Total" widget="monetary"/>
                <field name="reste_a_payer" sum="Reste" widget="monetary" 
                       decoration-danger="reste_a_payer > 0" 
                       decoration-success="reste_a_payer == 0"/>
            </tree>
        </field>
    </record>

    <!-- Vue Recherche Achat -->
    <record id="view_achat_search" model="ir.ui.view">
        <field name="name">agencevoyage.achat.search</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <search string="Rechercher un Achat">
                <field name="name" string="Numéro"/>
                <field name="voyage_id"/>
                <field name="fournisseur_id"/>
                <field name="nom_fournisseur"/>
                <field name="date_achat"/>
                
                <separator/>
                <filter string="Devis" name="devis" domain="[('statut', '=', 'devis')]"/>
                <filter string="Commande" name="commande" domain="[('statut', '=', 'commande')]"/>
                <filter string="Payé" name="paye" domain="[('statut', '=', 'paye')]"/>
                <filter string="Annulé" name="annule" domain="[('statut', '=', 'annule')]"/>
                
                <separator/>
                <filter string="Avec reste à payer" name="reste_a_payer" domain="[('reste_a_payer', '&gt;', 0)]"/>
                <filter string="Payé intégralement" name="paye_integralement" domain="[('reste_a_payer', '=', 0)]"/>
                
                <group expand="0" string="Grouper par">
                    <filter string="Statut" name="group_statut" context="{'group_by': 'statut'}"/>
                    <filter string="Voyage" name="group_voyage" context="{'group_by': 'voyage_id'}"/>
                    <filter string="Fournisseur" name="group_fournisseur" context="{'group_by': 'fournisseur_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date_achat'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Graphique Achat -->
    <record id="view_achat_graph" model="ir.ui.view">
        <field name="name">agencevoyage.achat.graph</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <graph string="Analyse des Achats" type="bar">
                <field name="date_achat" type="row" interval="month"/>
                <field name="montant_ttc" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Pivot Achat -->
    <record id="view_achat_pivot" model="ir.ui.view">
        <field name="name">agencevoyage.achat.pivot</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des Achats">
                <field name="date_achat" type="row" interval="month"/>
                <field name="statut" type="col"/>
                <field name="montant_ttc" type="measure" operator="sum"/>
                <field name="montant_ht" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Kanban Achat -->
    <record id="view_achat_kanban" model="ir.ui.view">
        <field name="name">agencevoyage.achat.kanban</field>
        <field name="model">agencevoyage.achat</field>
        <field name="arch" type="xml">
            <kanban default_group_by="statut" class="o_kanban_dashboard">
                <field name="id"/>
                <field name="name"/>
                <field name="date_achat"/>
                <field name="statut"/>
                <field name="voyage_id"/>
                <field name="fournisseur_id"/>
                <field name="nom_fournisseur"/>
                <field name="montant_ttc"/>
                <field name="reste_a_payer"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="voyage_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-truck"/> <field name="nom_fournisseur"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> <field name="date_achat"/>
                                    </div>
                                    <div class="mt-2">
                                        <strong>Total: <field name="montant_ttc" widget="monetary"/></strong>
                                    </div>
                                    <div t-if="record.reste_a_payer.raw_value > 0" class="text-warning">
                                        <i class="fa fa-exclamation-triangle"/> Reste: <field name="reste_a_payer" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Achat -->
    <record id="action_achat" model="ir.actions.act_window">
        <field name="name">Achats</field>
        <field name="res_model">agencevoyage.achat</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
        <field name="search_view_id" ref="view_achat_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier achat
            </p>
            <p>
                Gérez les achats et commandes auprès de vos fournisseurs.
            </p>
        </field>
    </record>
</odoo>
